        </div>

    </div>

    @RenderBody()

    <div class="footer">
        <div class="content">
            <p>Copyright &copy; @DateTime.Now.Year - Fatih Dumlupınar</p>
        </div>
    </div>

    <script src="@Url.Content("~/bundles/js/bundle.min.js")" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>